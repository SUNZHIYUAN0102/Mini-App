<!--pages/list/list.wxml-->
<button type="primary" bindtap="btnTapHandler">按钮</button>
<button type="primary" bindtap="countChange">{{count}}</button>
<button type="primary" bindtap="btnTap2" data-info="{{2}}">{{count}}</button>

<input type="text" bindinput="inputHandler" value="{{msg}}" />

<view wx:if="{{type===1}}">男</view>
<view wx:elif="{{type===2}}">女</view>
<view wx:else>保密</view>

<block wx:if="{{type===2}}">
    <view>view1</view>
    <view>view2</view>
</block>

<view hidden="{{flag}}">
    meow
</view>

<view wx:for="{{arr1}}" wx:for-index="idx" wx:for-item="itemName">
    索引: {{idx}}, item: {{itemName}}
</view>

<view class="username" wx:for="{{userList}}" wx:key="id">
    {{item.name}}
</view>